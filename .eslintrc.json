{
    "env": {
        "browser": true,
        "es6" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        //"no-unused-vars" : 2,
        //"no-undef" : 2,
        "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
        "sourceType": "module"
    },
    //"parser": "@babel/eslint-parser",
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    }
}